  "priority_rules": {
    "description": "Règles de priorité quand plusieurs domaines détectés",
    "rules": [
      {
        "condition": "health + nutrition",
        "priority": "health",
        "reason": "Santé prime sur nutrition (ex: 'aliment pour poulet malade')"
      },
      {
        "condition": "genetics + metrics",
        "priority": "genetics",
        "reason": "Performance génétique englobe les métriques"
      },
      {
        "condition": "management + economics",
        "priority": "management",
        "reason": "Gestion inclut aspects économiques"
      },
      {
        "condition": "protocol + health",
        "priority": "protocol",
        "reason": "Protocole plus spécifique que santé générale"
