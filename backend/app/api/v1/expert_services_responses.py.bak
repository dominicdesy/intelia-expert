            basic_response["dynamic_field_creation"] = self.config["dynamic_field_creation"]  # üÜï Nouveau flag v4.1.0
            
            return basic_response
            
        except Exception as e:
            logger.error(f"‚ùå [Create Basic Response v4.1.0] Erreur: {e}")
            return {
                "question": "Erreur",
                "response": "Une erreur s'est produite",
                "conversation_id": str(uuid.uuid4()),
                "timestamp": datetime.now().isoformat(),
